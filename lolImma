#include<stdio.h>
#include <string.h>
int main()
{
    char s[1000], sub[1000];
    int l,lsub,x,k,max=0,y,prev,flag;
    scanf("%s",s);
    scanf("%s",sub);
    l=strlen(s);
    lsub=strlen(sub);
    for(k=0;k<l;k++)
    {
        x=k;
        y=0;
        prev=1;
        flag=0;
        if(s[x]==sub[0])
        {
            while(x<l)
            {
                if(s[x]==sub[y])
                {
                    if(x-prev-1>ma1)ma1=x-prev-1;
                    prev=x;
                    y++;
                }
                else
                if(x==l-1)
                {
                    if(x-prev>ma1)ma1=x-prev;
                }
                if(y==lsub)flag=1;
                x++;
            
            }
        }
    }
    printf("%d",max); 
}
